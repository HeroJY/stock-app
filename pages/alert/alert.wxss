/* pages/alert/alert.wxss */

.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部卡片 */
.header-card {
  margin: 20rpx;
  background: linear-gradient(135deg, #1565C0 0%, #1976D2 100%);
  color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stock-info {
  flex: 1;
}

.stock-name {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  display: block;
}

.stock-codes {
  font-size: 26rpx;
  opacity: 0.9;
}

.current-data {
  text-align: right;
}

.current-premium {
  font-size: 28rpx;
  font-weight: 600;
}

/* 分组标题 */
.section-title {
  padding: 0 10rpx 20rpx;
}

.section-title text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 提醒类型选择 */
.alert-types {
  margin: 20rpx;
}

.type-options {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.type-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.type-option:last-child {
  border-bottom: none;
}

.type-option.active {
  background: #f0f8ff;
  border-left: 6rpx solid #1565C0;
}

.option-icon {
  margin-right: 25rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.option-info {
  flex: 1;
}

.option-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 溢价率提醒设置 */
.premium-alert-settings {
  margin: 20rpx;
}

.alert-conditions {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.condition-item {
  margin-bottom: 30rpx;
}

.condition-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.condition-selector {
  display: flex;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 6rpx;
}

.selector-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.selector-item.active {
  background: #1565C0;
  color: #ffffff;
}

.threshold-input {
  margin-top: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
}

.input-container {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.threshold-value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.input-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 15rpx;
}

/* 价格提醒设置 */
.price-alert-settings {
  margin: 20rpx;
}

.price-targets {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.target-section {
  margin-bottom: 40rpx;
}

.target-section:last-child {
  margin-bottom: 0;
}

.target-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.price-conditions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.price-condition {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.condition-text {
  font-size: 26rpx;
  color: #666;
  width: 80rpx;
  margin-right: 20rpx;
}

.price-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-right: 15rpx;
}

.price-unit {
  font-size: 24rpx;
  color: #666;
  width: 60rpx;
}

/* 通知设置 */
.notification-settings {
  margin: 20rpx;
}

.settings-list {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.time-range {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.time-text {
  font-size: 26rpx;
  color: #1565C0;
  padding: 10rpx 20rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
}

.time-separator {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.action-btn.primary {
  background: #1565C0;
  color: #ffffff;
}

.action-btn.secondary {
  background: #ffffff;
  color: #1565C0;
  border: 2rpx solid #1565C0;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header-card {
    flex-direction: column;
    text-align: center;
    gap: 20rpx;
  }
  
  .price-conditions {
    gap: 15rpx;
  }
  
  .price-condition {
    flex-direction: column;
    align-items: stretch;
    gap: 15rpx;
  }
  
  .condition-text {
    width: auto;
    text-align: center;
    margin-right: 0;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.type-option.active {
  animation: pulse 0.3s ease-out;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}