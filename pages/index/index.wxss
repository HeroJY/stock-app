/* pages/index/index.wxss */

.container {
  background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索栏样式 */
.search-container {
  background: #ffffff;
  padding: 30rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.search-box {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 24px;
  padding: 12px 20px;
  margin: 0 16px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  border: 1px solid #E2E8F0;
}

.search-icon {
  font-size: 16px;
  color: #666;
  margin-right: 8px;
}

.search-input {
  flex: 1;
  font-size: 14px;
  color: #333;
}

.search-btn {
  background: #5A67D8;
  color: white;
  padding: 8px 16px;
  border-radius: 16px;
  font-size: 12px;
  margin-left: 8px;
  box-shadow: 0 2px 8px rgba(90, 103, 216, 0.3);
}

/* 搜索结果样式 */
.search-results-section {
  margin: 16px;
  background: white;
  border-radius: 8px;
  padding: 16px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.clear-search {
  color: #5A67D8;
  font-size: 14px;
}

.search-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.search-result-item:last-child {
  border-bottom: none;
}

.result-info {
  flex: 1;
}

.result-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 4px;
}

.result-code {
  font-size: 12px;
  color: #666;
  display: block;
  margin-bottom: 4px;
}

.result-prices {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.result-price {
  font-size: 12px;
  color: #666;
}

.result-premium {
  font-size: 12px;
  color: #007aff;
  font-weight: bold;
}

.add-btn {
  background: #5A67D8;
  color: white;
  padding: 8px 16px;
  border-radius: 16px;
  font-size: 12px;
  box-shadow: 0 2px 8px rgba(90, 103, 216, 0.25);
}

/* 汇率卡片 */
.exchange-rate-card {
  margin: 20rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.rate-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.rate-title {
  font-size: 28rpx;
  font-weight: 600;
}

.rate-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.rate-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rate-value {
  font-size: 36rpx;
  font-weight: 700;
}

.refresh-btn {
  padding: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.refresh-icon {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  border-top: 3rpx solid transparent;
  border-radius: 50%;
  position: relative;
}

.refresh-icon::before {
  content: '';
  position: absolute;
  top: -6rpx;
  right: -2rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid rgba(255, 255, 255, 0.8);
  border-top: 4rpx solid transparent;
  border-bottom: 4rpx solid transparent;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-around;
  background: #ffffff;
  padding: 30rpx 20rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.toolbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.3s;
}

.toolbar-item:active {
  background: #f8f9fa;
}

.toolbar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.toolbar-text {
  font-size: 24rpx;
  color: #666;
}

/* 股票列表 */
.stock-list {
  padding: 0 20rpx;
}

.stock-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  padding: 32rpx;
  position: relative;
  transition: transform 0.2s, box-shadow 0.2s;
  border: 1px solid #F1F5F9;
}

.stock-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 32rpx rgba(90, 103, 216, 0.15);
}

.stock-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.stock-info {
  flex: 1;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stock-code {
  font-size: 24rpx;
  color: #666;
}

.favorite-btn {
  padding: 10rpx;
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
}

.stock-prices {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.price-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-radius: 16rpx;
  min-width: 0;
  border: 1px solid #E2E8F0;
}

.price-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.price-value {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  display: inline;
  line-height: 1.2;
  white-space: nowrap;
}

.price-change {
  font-size: 24rpx;
  font-weight: 500;
}

.price-change.positive {
  color: #dc3545;
}

.price-change.negative {
  color: #28a745;
}

.premium-rate {
  text-align: center;
  padding: 28rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  margin-bottom: 20rpx;
  border: 1px solid #E2E8F0;
}

.premium-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.premium-value {
  font-size: 48rpx;
  font-weight: 700;
}

.premium-positive {
  color: #dc3545;
}

.premium-negative {
  color: #28a745;
}

.premium-neutral {
  color: #6c757d;
}

.update-time {
  text-align: center;
  font-size: 22rpx;
  color: #999;
}


/* 搜索弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-modal {
  width: 90%;
  max-height: 80%;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  padding: 10rpx;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.search-content {
  max-height: 60vh;
  overflow-y: auto;
}

.search-input-container {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-search-input {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-btn {
  padding: 20rpx 30rpx;
  background: #5A67D8;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(90, 103, 216, 0.3);
}

/* 搜索历史 */
.search-history {
  padding: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.clear-history {
  font-size: 24rpx;
  color: #5A67D8;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-item {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #64748B;
  border: 1px solid #E2E8F0;
}

/* 搜索结果 */
.search-results {
  padding: 0 30rpx 30rpx;
}

.search-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-result-item:last-child {
  border-bottom: none;
}

.result-info {
  flex: 1;
}

.result-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.result-code {
  font-size: 24rpx;
  color: #666;
}

.add-btn {
  padding: 16rpx 28rpx;
  background: #5A67D8;
  color: #ffffff;
  border-radius: 28rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(90, 103, 216, 0.25);
}

/* 搜索状态 */
.search-loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
}

.no-results {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

/* 加载和空状态 */
.loading {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #666;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .stock-prices {
    flex-direction: column;
  }
  
  .price-item {
    margin: 10rpx 0;
  }
  
  .toolbar {
    padding: 20rpx 10rpx;
  }
  
  .toolbar-item {
    padding: 15rpx 10rpx;
  }
}

/* 动画效果 */
.stock-card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.search-modal {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
